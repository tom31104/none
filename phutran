    <script type="text/javascript">
        function tinhcap1(){
            var n1 = document.getElementById('o1').value;
            var results = parseFloat(n1);
            document.getElementById('result').value = results;
        }
    </script>
    <script type="text/javascript">
        function tinhcap4(){
            var n1 = document.getElementById('l1').value;
            var n2 = document.getElementById('l2').value;
            var n3 = document.getElementById('l3').value;
            var n4 = document.getElementById('l4').value;
            var n5 = document.getElementById('l5').value;
            var n6 = document.getElementById('l6').value;
            var n7 = document.getElementById('l7').value;
            var n8 = document.getElementById('l8').value;
            var n9 = document.getElementById('l9').value;
            var n10 = document.getElementById('l10').value;
            var n11 = document.getElementById('l11').value;
            var n12 = document.getElementById('l12').value;
            var n13 = document.getElementById('l13').value;
            var n14 = document.getElementById('l14').value;
            var n15 = document.getElementById('l15').value;
            var n16 = document.getElementById('l16').value;
            var results = parseFloat(n1)*(parseFloat(n6)*parseFloat(n11)*parseFloat(n16)+parseFloat(n7)*parseFloat(n12)*parseFloat(n14)+parseFloat(n10)*parseFloat(n15)*parseFloat(n8)-parseFloat(n8)*parseFloat(n11)*parseFloat(n14)-parseFloat(n12)*parseFloat(n15)*parseFloat(n6)-parseFloat(n10)*parseFloat(n7)*parseFloat(n16))
                        -parseFloat(n2)*(parseFloat(n5)*parseFloat(n11)*parseFloat(n16)+parseFloat(n7)*parseFloat(n12)*parseFloat(n13)+parseFloat(n9)*parseFloat(n15)*parseFloat(n8)-parseFloat(n8)*parseFloat(n11)*parseFloat(n13)-parseFloat(n12)*parseFloat(n15)*parseFloat(n5)-parseFloat(n9)*parseFloat(n7)*parseFloat(n16))
                        +parseFloat(n3)*(parseFloat(n5)*parseFloat(n10)*parseFloat(n16)+parseFloat(n6)*parseFloat(n12)*parseFloat(n13)+parseFloat(n9)*parseFloat(n14)*parseFloat(n8)-parseFloat(n8)*parseFloat(n10)*parseFloat(n13)-parseFloat(n12)*parseFloat(n14)*parseFloat(n5)-parseFloat(n9)*parseFloat(n6)*parseFloat(n16))
                        -parseFloat(n4)*(parseFloat(n5)*parseFloat(n10)*parseFloat(n15)+parseFloat(n6)*parseFloat(n11)*parseFloat(n13)+parseFloat(n9)*parseFloat(n14)*parseFloat(n7)-parseFloat(n7)*parseFloat(n10)*parseFloat(n13)-parseFloat(n11)*parseFloat(n14)*parseFloat(n5)-parseFloat(n9)*parseFloat(n6)*parseFloat(n15));
            document.getElementById('result').value = results;
        }
    </script>
    <script type="text/javascript">
        function tinhcap3(){
            var n1 = document.getElementById('m1').value;
            var n2 = document.getElementById('m2').value;
            var n3 = document.getElementById('m3').value;
            var n4 = document.getElementById('m4').value;
            var n5 = document.getElementById('m5').value;
            var n6 = document.getElementById('m6').value;
            var n7 = document.getElementById('m7').value;
            var n8 = document.getElementById('m8').value;
            var n9 = document.getElementById('m9').value;

            var results = parseFloat(n1)*parseFloat(n5)*parseFloat(n9)+parseFloat(n2)*parseFloat(n6)*parseFloat(n7)+parseFloat(n3)*parseFloat(n4)*parseFloat(n8)-parseFloat(n3)*parseFloat(n5)*parseFloat(n7)-parseFloat(n2)*parseFloat(n4)*parseFloat(n9)-parseFloat(n8)*parseFloat(n6)*parseFloat(n1);
            document.getElementById('result').value = results;
        }

    </script>
    <script type="text/javascript">
        function tinhcap2()
        {
            var n1 = document.getElementById('k1').value;
            var n2 = document.getElementById('k2').value;
            var n3 = document.getElementById('k3').value;
            var n4 = document.getElementById('k4').value;
            var results = parseFloat(n1)*parseFloat(n4)-parseFloat(n2)*parseFloat(n3);
            document.getElementById('result').value = results;

        }
    </script>
    <script>
        function openclose()
        {
            var N = document.getElementById('nhapsoN').value;
            var mt2 = document.querySelector('.mtcap2');
            var mt3 = document.querySelector('.mtcap3');
            var mt4 = document.querySelector('.mtcap4');
            var mt1 = document.querySelector('.mtcap1');
            var ks = document.querySelectorAll('.khung');
            if(N=="2") {
                for (var k of ks){
                    k.classList.add('open2');
                }
                for (var k of ks){
                    k.classList.remove('open4');
                }
                for (var k of ks){
                    k.classList.remove('open3');
                }
                for (var k of ks){
                    k.classList.remove('open1');
                }
                mt2.classList.add('open');
                mt1.classList.remove('open');
                mt3.classList.remove('open');
                mt4.classList.remove('open');
            }
            else if(N=="1") {
                for (var k of ks){
                    k.classList.add('open1');
                }
                for (var k of ks){
                    k.classList.remove('open2');
                }
                for (var k of ks){
                    k.classList.remove('open3');
                }
                for (var k of ks){
                    k.classList.remove('open4');
                }
                mt1.classList.add('open');
                mt2.classList.remove('open');
                mt3.classList.remove('open');
                mt4.classList.remove('open');
            }
            else if (N=="3"){
                for (var k of ks){
                    k.classList.add('open3');
                }
                for (var k of ks){
                    k.classList.remove('open2');
                }
                for (var k of ks){
                    k.classList.remove('open1');
                }
                for (var k of ks){
                    k.classList.remove('open4');
                }
                mt3.classList.add('open');
                mt1.classList.remove('open');
                mt2.classList.remove('open');
                mt4.classList.remove('open');
            }
            else if(N=="4") {
                for (var k of ks){
                    k.classList.add('open4');
                }
                for (var k of ks){
                    k.classList.remove('open2');
                }
                for (var k of ks){
                    k.classList.remove('open3');
                }
                for (var k of ks){
                    k.classList.remove('open1');
                }
                mt4.classList.add('open');
                mt1.classList.remove('open');
                mt2.classList.remove('open');
                mt3.classList.remove('open');
            }
            else {
                alert("Nhập số nguyên trong khoảng từ 1 đến 4");
            }
        }
    </script>
